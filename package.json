{
    "name": "stethomat.me",
    "version": "1.0.0",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "lint": "eslint ./src/pages/* ./src/components/* ./src/api/* ./src/data/* ./src/graphql/* ./src/lib/* ./src/types/* -c .eslintrc.json --fix --ext ts,tsx",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "firebase": "cd src/firebase && firebase deploy --only functions && cd ../",
        "generate": "graphql-codegen",
        "generate:watch": "graphql-codegen --watch 'src/graphql/**/*.ts'",
        "postinstall": "yarn generate"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@liveblocks/node": "^0.3.0",
        "@liveblocks/react": "^0.6.0-beta.5",
        "@tailwindcss/forms": "^0.3.2",
        "@tailwindcss/typography": "^0.4.1",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "isomorphic-unfetch": "^3.1.0",
        "next": "^10.2.3",
        "next-seo": "^4.24.0",
        "postmark": "^2.7.4",
        "prismjs": "^1.23.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-feather": "^2.0.9",
        "react-linkify": "^1.0.0-alpha",
        "react-markdown": "^6.0.2",
        "react-visibility-sensor": "^5.1.1",
        "rehype-parse": "^7.0.1",
        "rehype-raw": "^5.1.0",
        "rehype-remark": "^8.0.0",
        "rehype-sanitize": "^4.0.0",
        "remark-preset-lint-recommended": "^5.0.0",
        "remark-stringify": "^9.0.1",
        "remove-markdown": "^0.3.0",
        "string-replace-to-array": "^1.0.3",
        "styled-components": "^4.4.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.18",
        "@types/jest": "^26.0.23",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.6.1",
        "@types/react": "^17.0.9",
        "@typescript-eslint/parser": "^4.26.1",
        "autoprefixer": "^10.2.6",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-cypress": "^2.11.3",
        "eslint-plugin-mdx": "^1.13.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "postcss": "^8.3.0",
        "postcss-import": "^14.0.2",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.3.0",
        "prettier-eslint": "^12.0.0",
        "stylelint-config-recommended": "^5.0.0",
        "tailwindcss": "^2.1.2",
        "typescript": "^4.3.2",
        "typescript-eslint-parser": "^22.0.0",
        "webpack": "^4.46.0"
    },
    "lint-staged": {
        "*.+(ts|tsx)": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "pre-commit": "lint:staged && generate",
    "license": "MIT"
}
